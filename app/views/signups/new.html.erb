<div class="contact-main">
    <div class="content container"> <h1>Get the latest updates from Stories</h1>
        <div class="row">
            <div class="col-md-4 col-md-4-offset"></div>

            <div class="col-md-4">
                <%= form_for(@signup) do |f| %>
                <div class="form-group">
                    <label>First Name</label>
                    <%= f.text_field :firstname, :class => "form-control", :id => "signup_firstname" %>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <%= f.text_field :email, :class => "form-control" %>
                </div>

                    <%= f.submit :value => "Join", :class => "btn btn-default", :name => "commit", :type => "submit"  %>
                <% end %>

            </div>
              
         </div>
    </div>
    <div class="col-md-4 col-md-4-offset"></div>
</div>
